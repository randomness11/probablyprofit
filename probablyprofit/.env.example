# =============================================================================
# probablyprofit Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Wallet Configuration (Required for live trading)
# -----------------------------------------------------------------------------
# Your Polygon wallet private key (for signing transactions)
PRIVATE_KEY=your_private_key_here

# Starting capital for risk calculations (in USDC)
INITIAL_CAPITAL=1000.0

# -----------------------------------------------------------------------------
# Polymarket API (Required for Polymarket trading)
# -----------------------------------------------------------------------------
# Get these from: https://polymarket.com/profile -> API Keys
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_API_PASSPHRASE=your_passphrase

# -----------------------------------------------------------------------------
# Kalshi API (Required for Kalshi trading)
# -----------------------------------------------------------------------------
# Get these from: https://kalshi.com/api
KALSHI_API_KEY_ID=your_kalshi_key_id
KALSHI_PRIVATE_KEY_PATH=/path/to/kalshi_private_key.pem
KALSHI_DEMO=true  # Set to false for live trading

# -----------------------------------------------------------------------------
# AI Provider API Keys (At least one required)
# -----------------------------------------------------------------------------
# OpenAI (GPT-4, GPT-4o, o1-preview)
OPENAI_API_KEY=sk-your_openai_key

# Google Gemini
GOOGLE_API_KEY=your_google_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# -----------------------------------------------------------------------------
# Intelligence Layer (Optional)
# -----------------------------------------------------------------------------
# Perplexity API for real-time news context
PERPLEXITY_API_KEY=pplx-your_perplexity_key

# -----------------------------------------------------------------------------
# Optional Features
# -----------------------------------------------------------------------------
# Enable SQLite persistence for trade history
ENABLE_PERSISTENCE=true

# Web dashboard for monitoring
ENABLE_WEB_DASHBOARD=false
WEB_DASHBOARD_PORT=8000
